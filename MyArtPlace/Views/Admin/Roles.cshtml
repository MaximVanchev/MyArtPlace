@using MyArtPlace.Core.Models.Admin
@model UserRolesViewModel

@{
    ViewData["Title"] = "User Roles";
    var items = (IEnumerable<SelectListItem>)ViewBag.RoleItem;
}

<div class="row">
    <div class="col-4">
        <form id="roles" method="post">
            <input type="hidden" name="UserId" value="@Model.Id" />
            <input type="hidden" name="Name" value="@Model.Username" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h3>User: @Html.DisplayFor(m => m.Username)</h3>
            </div>
            <div class="form-floating">
                <div class="form-group" >
                    <label style="margin-right: 100px;">User Roles</label>                      
                    <label style="margin-right: 100px;">Left click -> select</label>      
                    <label>Ctrl + Left click -> deselect</label>
                    <select asp-for="RoleNames" asp-items="@items" class="form-control">
                       
                    </select>
                </div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-4">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
</div>